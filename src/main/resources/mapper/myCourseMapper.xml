<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.keep.dao.MyCourseDao">
    <resultMap id="MyCourseMap" type="com.example.keep.entity.MyCourse">
        <result property="id" column="id" jdbcType="INTEGER" />
        <result property="user_id" column="user_id" jdbcType="INTEGER" />
        <result property="course_id" column="course_id" jdbcType="INTEGER" />
        <result property="course_name" column="course_name" jdbcType="VARCHAR" />
        <result property="picture" column="picture" jdbcType="VARCHAR" />
        <result property="my_classes" column="my_classes" jdbcType="INTEGER" />
        <result property="classes" column="classes" jdbcType="INTEGER" />
    </resultMap>

    <select id="findAll" resultMap="MyCourseMap">
        select *
        from my_course
        where user_id=#{user_id}
    </select>

    <select id="findByCourseId" resultMap="MyCourseMap">
        select *
        from my_course
        where course_id=#{course_id} and user_id = #{user_id}
    </select>
    
    <insert id="addMyCourse" keyProperty="id" useGeneratedKeys="true">
        insert into my_course(user_id, course_id, course_name, picture, my_classes, classes)
        values (#{user_id}, #{course_id}, #{course_name}, #{picture}, #{my_classes}, #{classes})
    </insert>

    <update id="clockIn" keyProperty="id" useGeneratedKeys="true">
        update my_course
        set my_classes = #{my_classes}
        where id = #{id}
    </update>
</mapper>